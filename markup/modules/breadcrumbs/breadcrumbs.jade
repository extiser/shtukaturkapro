mixin breadcrumbs(data)
	.breadcrumbs
		a(href="#" title="").breadcrumbs__item.breadcrumbs__item--home Главная
		- if (data == 'category') {
		span.breadcrumbs__item.breadcrumbs__item--current Категория
		- }
		- if (data == 'page') {
		a(href="#" title="").breadcrumbs__item Категория
		span.breadcrumbs__item.breadcrumbs__item--current Запись
		- }